
extends ./layouts/standar.pug

block content

  <div class="container-fluid fom">
    <form action="">
      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4 form-group">
          <label for="proceso">Nombre</label>
        </div>
        <div class="col-sm-8 col-md-8 col-lg-8 form-group">
          <input type="text" class="form-control" name="proceso" id="proceso" placeholder="Proceso"  required >
        </div>
      </div>
      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4 form-group">
          <label for="descripcion">Descripcion</label>
        </div>
        <div class="col-sm-8 col-md-8 col-lg-8 form-group">
          <textarea class="form-control rounded-0" id="descripcion" rows="10" required></textarea>
        </div>
      </div>
      
      <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 form-group">        
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 form-group">
          <button type="button" class="btn btn-info">Limpiar</button>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3">
            <button class="btn btn-info">Guardar</button>
        </div>
      </div>
    </form>
  </div>