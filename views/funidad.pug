extends ./layouts/standar.pug

block content

  <div class="container-fluid fom">
    <form action="">
      <div class="row">
        <div class="col-sm-2 col-md-2 col-lg-2 form-group">
          <label for="siglas">Siglas</label>
        </div>
        <div class="col-sm-2 col-md-2 col-lg-2 form-group">
          <input type="text" class="form-control" name="siglas" id="siglas" placeholder="Agrega Siglas" maxlength="3" required="true">
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 form-group">
          <label for="unidadnombre">Nombre de la Unidad</label>
        </div>
        <div class="col-sm-5 col-md-5 col-lg-5 form-group">
          <input type="text" class="form-control" name="unidadnombre" id="unidadnombre" placeholder="Nombre de la Unidad" required="true" >
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4 form-group">
            <label for="apepat">Apellido Paterno del Responsable</label>
        </div>
        <div class="col-sm-8 col-md-8 col-lg-8 form-group">
          <input type="text" class="form-control" name="apepat" id="apepat" placeholder="Apellido Paterno"required="true">
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4 form-group">
          <label for="apemat">Apellido Materno del Responsable</label>
        </div>
        <div class="col-sm-8 col-md-8 col-lg-8 form-group">
          <input type="text" class="form-control" name="apemat" id="apemat" placeholder="Apellido Materno"required="true">
        </div>
      </div>

      <div class="row">
        <div class="col-sm-4 col-md-4 col-lg-4 form-group">
          <label for="nombre">Nombre del Responsable</label>
        </div>
        <div class="col-sm-8 col-md-8 col-lg-8 form-group">
          <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Nombre"required="true">
        </div>
      </div>

      <div class="row">
        <div class="col-sm-3 col-md-3 col-lg-3 form-group">
          <label for="telefono">Telefono</label>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 form-group">
          <input type="number" class="form-control" name="telefono" id="telefono" placeholder="Telefono"required="true">
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 form-group">
          <label for="correo">Correo</label>
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 form-group">
          <input type="email" class="form-control" name="correo" id="correo" placeholder="correo@dominio.com"required="true">
        </div>
      </div>

      <div class="row">
        <div class="col-sm-6 col-md-6 col-lg-6 form-group">
        </div>
        <div class="col-sm-3 col-md-3 col-lg-3 form-group">
          <button type="button" class="btn btn-info">Limpiar</button>
        </div>
        <div class="col-md-3col-sm-3 col-md-3 col-lg-3 form-group">
          <button class="btn btn-info">Guardar</button>
        </div>
      </div>
    </form>
  </div>